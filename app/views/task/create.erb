<body id="create-image"><div class="container-fluid">
  <center>
  <span class="text"><h1>Create your task</h1></span>
  <br>
  <form action = '/task/create' method = 'POST' id = 'create_task'>
      <div class="input-group">
        <input type="text" class="form-control input-text bckgrnd" name = 'title'  value='<%= @title %>' aria-describedby="basic-addon2">
        <span class="input-group-addon" id="basic-addon2">YOUR TASK'S TITLE</span>
      </div>
      <br>
      <span class="text"><h4>SELECT CATEGORY</h4></span>

      <select class="sel" name = 'category' form = 'create_task'>
        <% @category.each do |cat| %>
        <option value='<%= cat.id %>'><%= cat.title %></option>
        <% end %>
     </select><br>
  <p></p>
      <input type='hidden' name='day' value='<%= @day %>'><br>
      <input type ='submit' class="sub input-text" value = 'submit'><br>
  </form><br><br>
      <a id="home" href="/"><button type="button" class="btn btn-default btn-lg">
          <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
          </button>
      </a>
      </center>
</div>
</body>